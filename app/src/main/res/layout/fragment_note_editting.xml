<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp"
    tools:context=".ui.settings.NoteEdittingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintShowNoteKeyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvShowNoteKeyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_note_keyboard"
            android:textColor="@color/text"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvShowNoteKeyboardDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_note_keyboard_des"
            android:textColor="@color/textDes"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvShowNoteKeyboard" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swShowNoteKeyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:thumbTint="@color/switch_thumb_color"
            app:trackTint="@color/swBackground" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintCursorPositionInNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintShowNoteKeyboard">

        <TextView
            android:id="@+id/tvCursorPositionInNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cursor_postition_in_a_note"
            android:textColor="@color/text"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCursorPositionInNoteDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cursor_postition_in_a_note_des"
            android:textColor="@color/textDes"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCursorPositionInNote" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintShowTextFormattingToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintCursorPositionInNote">

        <TextView
            android:id="@+id/tvShowTextFormattingToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_text_formatting_toolbar"
            android:textColor="@color/text"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvShowTextFormattingToolbarDes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/show_text_formatting_toolbar_des"
            android:textColor="@color/textDes"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintEnd_toStartOf="@id/swShowTextFormattingToolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvShowTextFormattingToolbar" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swShowTextFormattingToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:thumbTint="@color/switch_thumb_color"
            app:trackTint="@color/swBackground" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintDefaultFontSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintShowTextFormattingToolbar">

        <TextView
            android:id="@+id/tvDefaultFontSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_note_text_font_size"
            android:textColor="@color/text"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDefaultFontSizeDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_note_text_font_size_value"
            android:textColor="@color/textDes"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDefaultFontSize" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintSwitchSaveUndo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintDefaultFontSize">

        <TextView
            android:id="@+id/tvSwitchSaveUndo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/switch_save_and_undo_buttons"
            android:textColor="@color/text"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSwitchSaveUndoDes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/switch_save_and_undo_buttons_des"
            android:textColor="@color/textDes"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintEnd_toStartOf="@id/swSwitchSaveUndo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSwitchSaveUndo" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swSwitchSaveUndo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:thumbTint="@color/switch_thumb_color"
            app:trackTint="@color/swBackground" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintSaveNotesAuto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintSwitchSaveUndo">

        <TextView
            android:id="@+id/tvSaveNotesAuto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save_notes_automatically"
            android:textColor="@color/text"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSaveNotesAutoDes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/save_notes_automatically_des"
            android:textColor="@color/textDes"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintEnd_toStartOf="@id/swSaveNotesAuto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSaveNotesAuto" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swSaveNotesAuto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:thumbTint="@color/switch_thumb_color"
            app:trackTint="@color/swBackground" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintConfirmUnsaveChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintSaveNotesAuto">

        <TextView
            android:id="@+id/tvConfirmUnsaveChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_dropping_unsaved_change"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvConfirmUnsaveChangeDes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/confirm_dropping_unsaved_change_des"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintEnd_toStartOf="@id/swConfirmUnsaveChange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvConfirmUnsaveChange" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swConfirmUnsaveChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:checked="true"
            android:clickable="false"
            app:thumbTint="@color/switch_thumb_color"
            app:trackTint="@color/swBackground" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintOpenNoteInReadMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintConfirmUnsaveChange">

        <TextView
            android:id="@+id/tvOpenNoteInReadMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/open_notes_in_read_mode"
            android:textColor="@color/text"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvOpenNoteInReadModeDes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/open_notes_in_read_mode_des"
            android:textColor="@color/textDes"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/swOpenNoteInReadMode"
            app:layout_constraintTop_toBottomOf="@id/tvOpenNoteInReadMode" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swOpenNoteInReadMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:thumbTint="@color/switch_thumb_color"
            app:trackTint="@color/swBackground" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintKeepScreenOn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintOpenNoteInReadMode">

        <TextView
            android:id="@+id/tvKeepScreenOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/keep_screen_on"
            android:textColor="@color/text"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvKeepScreenOnDes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/keep_screen_on_des"
            android:textColor="@color/textDes"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/swKeepScreenOn"
            app:layout_constraintTop_toBottomOf="@id/tvKeepScreenOn" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swKeepScreenOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:thumbTint="@color/switch_thumb_color"
            app:trackTint="@color/swBackground" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintDisableTextAutoComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintKeepScreenOn">

        <TextView
            android:id="@+id/tvDisableTextAutoComplete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/disable_text_autocomplete"
            android:textColor="@color/text"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDisableTextAutoCompleteDes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/disable_text_autocomplete_des"
            android:textColor="@color/textDes"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/swDisableTextAutoComplete"
            app:layout_constraintTop_toBottomOf="@id/tvDisableTextAutoComplete" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swDisableTextAutoComplete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:thumbTint="@color/switch_thumb_color"
            app:trackTint="@color/swBackground" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>