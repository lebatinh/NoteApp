<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp"
    tools:context=".ui.settings.NoteListSettingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintOpenLastChosenCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvOpenLastChosenCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/open_the_last_chosen_category"
            android:textColor="@color/text"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvOpenLastChosenCategoryDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/opens_the_last_chosen_category_des"
            android:textColor="@color/textDes"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvOpenLastChosenCategory" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swOpenLastChosenCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintShowNoteCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintOpenLastChosenCategory">

        <TextView
            android:id="@+id/tvShowNoteCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_note_categories"
            android:textColor="@color/text"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvShowNoteCategoryDes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20sdp"
            android:text="@string/show_note_categories_des"
            android:textColor="@color/textDes"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintEnd_toStartOf="@+id/swShowNoteCategory"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvShowNoteCategory" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swShowNoteCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:checked="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>